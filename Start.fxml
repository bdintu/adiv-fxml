          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <items>
            <Pane prefHeight="286.0" prefWidth="538.0">
               <children>
                  <Button layoutX="322.0" layoutY="259.0" mnemonicParsing="false" prefHeight="76.0" prefWidth="254.0" text="LOGIN">
