        <Pane prefHeight="50.0" prefWidth="670.0" HBox.hgrow="ALWAYS">
               <children>
                  <ButtonBar layoutX="540.0" layoutY="5.0" prefHeight="40.0" prefWidth="340.0">
                    <buttons>
                        <Label text="Don't have account?" />
                      <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="138.0" text="Register NOW" />
                    </buttons>
                  </ButtonBar>
               </children></Pane>
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
